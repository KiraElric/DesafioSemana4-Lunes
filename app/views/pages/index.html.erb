<h1 class="font-weight-bold text-center display-2">Posts publicados</h1>
<table class="table text-center">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Fecha publicaci√≥n</th>
      <th>Imagen</th>
      <th>Contenido</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
    <tr>
      <td><%=post.title%></td>
      <td><%=post.created_at%></td>
      <td><img src="<%=post.image_url%>" alt="img" class="img-fluid rounded" style="max-width: 300px; max-height:400px;"></td>
      <td class="text-justify"><%=post.content%></td>
    </tr>
    <% end %>
  </tbody>
</table>
